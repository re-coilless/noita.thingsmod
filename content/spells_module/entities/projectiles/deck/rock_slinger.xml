<Entity name="rock_slinger_projectile" tags="projectile_player,rock_slinger_caster">
  <Base file="data/entities/base_projectile.xml" >
    <VelocityComponent
      gravity_y="150"
      air_friction="1.7"
	  mass="0.1"
	  >
    </VelocityComponent>
	</Base>


    <ProjectileComponent
      _enabled="1"
      lob_min="0.5"
      lob_max="0.7"
      speed_min="0"
      speed_max="0"
      friction="1"
      direction_random_rad="0.00"
      on_death_explode="1"
      on_death_gfx_leave_sprite="0"
      on_lifetime_out_explode="1"
      explosion_dont_damage_shooter="1"
      on_collision_die="1"
      lifetime="120"
      damage="0"
      velocity_sets_scale="0"
      lifetime_randomness="4"
      ragdoll_force_multiplier="0.009"
      hit_particle_force_multiplier="0.1"
      shoot_light_flash_r="160"
      shoot_light_flash_g="160"
      shoot_light_flash_b="160"
      shoot_light_flash_radius="64"
      knockback_force="0">
      <config_explosion
        never_cache="1"
        damage="0.0"
        camera_shake="0.5"
        explosion_radius="2"
        explosion_sprite="mods/noita.thingsmod/content/spells_module/projectiles_gfx/explosion_splat_gray.xml"
        explosion_sprite_lifetime="0"
        create_cell_probability="0"
